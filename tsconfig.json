{
  "compilerOptions": {
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": false,
    "outDir": "./dist",
    "target": "ES2020",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": [
      "esnext",
      "es2018",
      "es2017",
      "es2016",
      "es2015",
      "es7",
      "es6",
      "es5",
      "dom",
      "dom.iterable"
    ],
    "baseUrl": "./"
  },
  "paths": {
    "*": ["./src/@types/*"]
  },
  "include": ["./src/", "./src/@types/**/*"],
  "exclude": ["./dist/"]
}
